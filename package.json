{
  "name": "todos",
  "workspaces": [
    "todos-contract",
    "todos-backend",
    "todos-frontend"
  ],
  "scripts": {
    "build": "npm run build --workspace=todos-frontend",
    "start": "npm start --workspace=todos-frontend",
    "test": "npm test --workspaces --if-present",
    "analyze": "npm run eslint && npm run prettier:check",
    "analyze:fix": "npm run eslint:fix && npm run prettier:write",
    "eslint": "eslint */src",
    "eslint:fix": "eslint --fix */src",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^8.14.0",
    "jest": "^28.0.2",
    "prettier": "^2.6.2"
  }
}
